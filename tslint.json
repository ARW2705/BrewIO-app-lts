{
  "extends": "tslint:recommended",
  "linterOptions": {
    "exclude": [
      "**/*.spec*"
    ]
  },
  "rules": {
    "align": {
      "options": [
        "parameters",
        "statements"
      ],
      "severity": "warning"
    },
    "array-callback-return": { "severity": "warning" },
    "array-type": false,
    "arrow-parens": { "severity": "warning" },
    "arrow-return-shorthand": true,
    "curly": true,
    "component-class-suffix": {
      "options": [true, "Page", "Component", "Stub"],
      "severity": "warning"
    },
    "contextual-lifecycle": true,
    "deprecation": {
      "severity": "warning"
    },
    "directive-class-suffix": true,
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      false,
      "element",
      "app",
      "kebab-case"
    ],
    "default-param-last": { "severity": "warning" },
    "eofline": true,
    "experimentalDecorators": { "severity": "warning" },
    "forin": { "severity": "warning" },
    "func-style": { "severity": "warning" },
    "function-paren-newline": { "severity": "warning" },
    "implicit-arrow-linebreak": { "severity": "warning" },
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "import-spacing": true,
    "import/prefer-default-export": { "severity": "warning" },
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "jsdoc-format": { "severity": "warning" },
    "max-classes-per-file": false,
    "max-line-length": {
      "options": [
        true,
        140
      ],
      "severity": "warning"
    },
    "member-access": false,
    "member-ordering": [
      false,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-angle-bracket-type-assertion": false,
    "no-consecutive-blank-lines": false,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-empty": false,
    "no-empty-interface": false,
    "no-eval": { "severity": "warning" },
    "no-conflicting-lifecycle": true,
    "no-duplicate-imports": true,
    "no-host-metadata-property": true,
    "no-inferrable-types": [
      false,
      "ignore-params"
    ],
    "no-input-rename": true,
    "no-inputs-metadata-property": true,
    "no-iterator": { "severity": "warning" },
    "no-loop-func": true,
    "no-magic-numbers": { "severity": "warning" },
    "no-new-func": true,
    "no-non-null-assertion": true,
    "no-output-native": true,
    "no-output-on-prefix": true,
    "no-output-rename": true,
    "no-outputs-metadata-property": true,
    "no-parameter-reassignment": { "severity": "warning" },
    "no-redundant-jsdoc": true,
    "no-string-literal": false,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": { "severity": "warning" },
    "no-useless-constructor": { "severity": "warning" },
    "no-useless-escape": { "severity": "warning" },
    "no-var-requires": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-shorthand": { "severity": "warning" },
    "object-literal-sort-keys": [false],
    "one-variable-per-declaration": true,
    "only-arrow-functions": true,
    "ordered-imports": { "severity": "warning" },
    "prefer-arrow-callback": true,
    "prefer-const": { "severity": "warning" },
    "prefer-object-spread": { "severity": "warning" },
    "prefer-template": { "severity": "warning" },
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": {
      "options": [
        "always"
      ],
      "severity": "warning"
    },
    "space-before-function-paren": {
      "options": {
        "anonymous": "never",
        "asyncArrow": "always",
        "constructor": "never",
        "method": "never",
        "named": "never"
      }
    },
    "trailing-comma": false,
    "triple-equals": true,
    "typedef-whitespace": {
      "options": [
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        },
        {
          "call-signature": "onespace",
          "index-signature": "onespace",
          "parameter": "onespace",
          "property-declaration": "onespace",
          "variable-declaration": "onespace"
        }
      ]
    },
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-pascal-case",
        "allow-leading-underscore"
      ]
    },
    "whitespace": {
      "options": [
        "check-branch",
        "check-decl",
        "check-operator",
        "check-separator",
        "check-type"
      ],
      "severity": "warning"
    },
    "template-banana-in-box": true,
    "template-no-negated-async": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true
  },
  "rulesDirectory": [
    "codelyzer"
  ]
}
